# Input LAMMPS, water-ch4o mixture

units real
atom_style full
bond_style harmonic
angle_style harmonic
dihedral_style opls
pair_style lj/cut/coul/long 12.0
pair_modify mix arithmetic
kspace_style ewald 1e-5
special_bonds lj/coul 0.0 0.0 0.0
kspace_modify kmax/ewald 5 5 5 gewald 0.2346
boundary p p p

region box block -12 12 -12 12 -12 12
create_box 4 box &
    bond/types 3 &
    angle/types 3 &
    dihedral/types 1 &
    extra/bond/per/atom 10 &
    extra/angle/per/atom 10 &
    extra/dihedral/per/atom 10 &
    extra/special/per/atom 10

molecule ch4o ch4o.mol
create_atoms 0 random 1 27910 NULL mol ch4o 454756 overlap 2.5 maxtry 50
group ch4o type 1 2 3 4

# neigh_modify exclude group ch4o ch4o

include parameters.inc

thermo_style custom step temp etotal ecoul elong

run 0

write_data topology.data nocoeff
